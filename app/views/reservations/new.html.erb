<table id ="reservation_new_table">
<tr>
  <td><%= @room.name %></td>
</tr>
<tr>
  <td><%= @room.adress %></td>
</tr>
<tr>
  <td><%= @room.introduction %></td>
</tr>
</table>

<div id="reservation_new">
 <h2>部屋を予約する</h2>
 <%= form_with model: @reservation, method: :get, url: reservations_confirm_path do |f| %>    
  <%= f.hidden_field :user_id, value: current_user.id %>
  <%= f.hidden_field :room_id, value: @room.id %>
    <table>
     <tr>
       <th><%= f.label :startday ,"開始日" %></th>
       <td><%= f.date_field :startday %></td>
     </tr>
 
     <tr>
       <th><%= f.label :endday ,"終了日" %></th>
       <td><%= f.date_field :endday %></td>
     </tr>
 
     <tr>
       <th><%= f.label :people ,"人数" %></th>
       <td><%= f.number_field :people %></td>
     </tr>
   </table>
   <div>
     <ul>
       <li><%= f.submit "確認画面へ"%></li>
     </ul>
   </div>
 <% end %>