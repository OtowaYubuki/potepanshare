<div id ="room_index">
<h2>検索結果: 件</h2>
<table>
<thead>
 <tr>
  <th>画像</th>
  <th>名前</th>
  <th>住所</th>
  <th>値段</th>
  <th>予約</th>
  <th>部屋ID</th>
 </tr>
</thead>

<tbody>
 <tr>
 <% @rooms.each do |room| %>
    <% if room.image.attached? %>
  <td> <%= image_tag room.image, size: '100x100' %>
    <% else %>
     画像なし
   <% end %>
  </td>
  <td><%= room.name %></td>
  <td><%= room.adress %></td>
  <td><%= room.price %></td>
  <td><%= link_to "予約する" ,reservations_new_path %></td>
  <td><%= room.id %></td>
 </tr>
 <% end %>
</tbody>
</table>
